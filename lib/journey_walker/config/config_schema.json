{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "transitions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "not": {
        "items": {
          "not": {
            "type": "object",
            "$ref": "#/definitions/initialTransition"
          }
        }
      },
      "items": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/definitions/initialTransition"
          },
          {
            "$ref": "#/definitions/normalTransition"
          }
        ]
      }
    },
    "states": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ]
      }
    },
    "data_sources": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "properties": {
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": true,
        "required": [
          "type",
          "name"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "states",
    "transitions"
  ],
  "definitions": {
    "initialTransition": {
      "properties": {
        "to": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "pattern": "^start$"
        },
        "conditions": {
          "$ref": "#/definitions/conditions"
        }
      },
      "additionalProperties": false,
      "required": [
        "to",
        "action"
      ]
    },
    "normalTransition": {
      "properties": {
        "to": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "pattern": "^(?!start$)"
        },
        "conditions": {
          "$ref": "#/definitions/conditions"
        }
      },
      "additionalProperties": false,
      "required": [
        "to",
        "from",
        "action"
      ]
    },
    "conditions": {
      "type": "array",
      "items": {
        "properties": {
          "source_call": {
            "type": "object",
            "$ref": "#/definitions/sourceCall"
          },
          "value": {
          }
        },
        "additionalProperties": false,
        "required": [
          "source_call",
          "value"
        ]
      }
    },
    "sourceCall": {
      "properties": {
        "source": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "oneOf": [
                  {
                    "not": {
                      "type": "object"
                    }
                  },
                  {
                    "type": "object",
                    "$ref": "#/definitions/sourceCall"
                  }
                ]
              }
            },
            "additionalProperties": false,
            "required": [
              "name",
              "value"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "source",
        "method"
      ]
    }
  }
}